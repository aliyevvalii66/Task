@model Lesson

<form id="lessonForm" method="post" asp-action="@ViewContext.RouteData.Values["action"]">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Kod</label>
        <input asp-for="LessonCode" class="form-control" />
        <span asp-validation-for="LessonCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="LessonName" class="form-control" />
        <span asp-validation-for="LessonName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Sinif</label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Müəllim adı</label>
        <input asp-for="TeacherName" class="form-control" />
        <span asp-validation-for="TeacherName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Müəllim soyadı</label>
        <input asp-for="TeacherSurname" class="form-control" />
        <span asp-validation-for="TeacherSurname" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Yadda saxla</button>
</form>
