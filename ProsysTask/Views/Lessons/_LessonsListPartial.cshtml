@model IEnumerable<Lesson>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kod</th>
            <th>Ad</th>
            <th>Sinif</th>
            <th>Müəllim</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>@lesson.LessonCode</td>
                <td>@lesson.LessonName</td>
                <td>@lesson.Grade</td>
                <td>@lesson.TeacherName @lesson.TeacherSurname</td>
                <td>
                    <a href="#" class="btn btn-sm btn-primary edit-lesson" data-id="@lesson.LessonCode">Redaktə</a>
                    <a href="#" class="btn btn-sm btn-danger delete-lesson" data-id="@lesson.LessonCode">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
